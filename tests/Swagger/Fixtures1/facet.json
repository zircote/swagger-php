{
    "apiVersion": "0.2",
    "swaggerVersion": "1.1",
    "basePath": "http://facetstore.zircote.com/swagger-php/api",
    "resourcePath": "/facet",
    "apis": [
        {
            "path": "/facet.{format}/{facetId}",
            "description": "Operations about facets",
            "operations": [
                {
                    "nickname": "getfacetById",
                    "responseClass": "FacetResult",
                    "summary": "Find facet by ID",
                    "httpMethod": "GET",
                    "parameters": [
                        {
                            "description": "ID of facet that needs to be fetched",
                            "allowMultiple": false,
                            "dataType": "string",
                            "name": "facetId",
                            "paramType": "path",
                            "required": true
                        }
                    ],
                    "errorResponses": [
                        {
                            "code": "400",
                            "reason": "Invalid ID supplied"
                        },
                        {
                            "code": "404",
                            "reason": "facet not found"
                        }
                    ],
                    "notes": "Returns a facet based on ID"
                }
            ]
        }
    ],
    "models": {
        "FacetResult": {
            "id": "FacetResult",
            "properties": {
                "facetSets": {
                    "type": "Array",
                    "items": {
                        "$ref": "FacetSet"
                    }
                }
            }
        },
        "FacetSet": {
            "id": "FacetSet",
            "properties": {
                "facets": {
                    "type": "Array",
                    "items": {
                        "$ref": "Facet"
                    }
                }
            }
        },
        "Facet": {
            "id": "Facet",
            "properties": {
                "prop1": {
                    "type": "string"
                }
            }
        }
    }
}
